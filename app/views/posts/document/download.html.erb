<h1 class="text-4xl font-bold my-2"><%= @post.title %></h1>
<div class="mb-4 text-slate-600">
    <p><span class=" font-semibold text-slate-800">Author:</span> <%= @post.user.name %></p>
    <p>
        <span class="font-semibold text-slate-800">Last Published At:</span>
        <%= @post.last_published_at ? @post.last_published_at.strftime("%B %d, %Y %l:%M %p") : "Not published yet" %>
    </p>
</div>
<div class="mb-8 ">
  <p class="font-semibold mb-1 text-slate-800">Categories:</p>
    <% if @post.categories.any? %>
    <ul class=" list-inside">
        <% @post.categories.each do |category| %>
        <li><%= category.name %></li>
        <% end %>
    </ul>
    <% else %>
    <p>Unknown</p>
    <% end %>
</div>
<div>
    <h2 class="text-xl font-semibold mb-2 text-slate-800">Description: </h2>
    <p class="whitespace-pre-line"><%= @post.description %></p>
</div>
